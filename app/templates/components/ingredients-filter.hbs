<div class="ingredients-filter">
  <h3 class="input-label">Filter:</h3>
  <section>
    <select onchange={{action 'handleQuerySelect' value="target.value" }} class="input-key" >
      {{#each queryTypes as |type|}}
        <option value={{type}}>{{type}}</option>
      {{/each}}
    </select>
  </section>
  <section>
    {{ input
        value=value
        key-up=(action 'handleFilter')
        class="input-value"
        placeholder="Filter Ingredients"}}
  </section>
</div>
{{yield results}}
